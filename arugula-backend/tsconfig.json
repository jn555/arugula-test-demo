{
  "compilerOptions": {
    "target": "ES2020", // Target ECMAScript version
    "module": "commonjs", // Module system for Node.js
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory for source files
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Allow compatibility with CommonJS modules
    "experimentalDecorators": true,
    "resolveJsonModule": true, // Allow importing JSON files
    "skipLibCheck": true // Skip type checks for libraries
  },
  "include": ["src/**/*"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules"] // Exclude node_modules from compilation
}
